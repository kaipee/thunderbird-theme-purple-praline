{
  "manifest_version":2,
  "name":"Purple Praline",
  "version":"0.1.0",
  "description":"A purple theme for Thunderbird",
  "author":"kaipee",
  "homepage_url":"https://github.com/kaipee/thunderbird-theme-purple-praline",
  "applications":{
    "gecko":{
      "id":"purple.praline.thunderbird@kaipee.co.uk",
      "strict_min_version":"78.0"
    }
  },
  "theme_experiment":{
    "stylesheet": "style.css",
    "colors":{
      "kpexp_headers_text": "--kpexp-headers-color"
    }
  },
  "theme":{
    "colors":{
      "button_background_active": "#7549B1",
      "button_background_hover": "#7549B1",

      "frame": "#200040",
      "frame_inactive": "#200040",

      "icons": "",
      "icons_attention": "#9173A8",

      "popup": "#FFFFFF",
      "popup_border": "#DCDFE3",
      "popup_highlight": "#9173A8",
      "popup_highlight_text": "#FFFFFF",
      "popup_text": "#5C616C",

      "sidebar": "#DCD5F7",
      "sidebar_border": "#A99BBB",
      "sidebar_highlight": "#FDD023",
      "sidebar_highlight_border": "#A99BBB",
      "sidebar_highlight_text": "#000000",
      "sidebar_text": "#000000",

      "tab_background_separator": "rgba(255, 255, 255, 0.5)",
      "tab_background_text": "#AFB8C6",
      "tab_line": "#FDD023",
      "tab_loading": "#FDD023",
      "tab_selected": "",
      "tab_text": "#FFFFFF",
      
      "toolbar": "#461D7C",
      "toolbar_bottom_separator": "#DCDFE3",
      "toolbar_field": "#FFFFFF",
      "toolbar_field_border": "#CFD6E6",
      "toolbar_field_border_focus": "#CFD6E6",
      "toolbar_field_focus": "#FFFFFF",
      "toolbar_field_highlight": "#9173A8",
      "toolbar_field_highlight_text": "#FFFFFF",
      "toolbar_field_text": "#FFFFFF",
      "toolbar_field_text_focus": "",
      "toolbar_text": "#FFFFFF",
      "toolbar_top_separator": "#272A34",
      "toolbar_vertical_separator": "#FFFFFF",

      "kpexp_headers_text": "#FFFFFF"
    }
  }
}
